<Window x:Class="Assignment_3_Deck_Builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_3_Deck_Builder"
        mc:Ignorable="d"
        Title="Deck Builder" Height="450" Width="751" WindowStartupLocation="CenterScreen">
    <GroupBox x:Name="cardGroupBox" Header="Card" Margin="34,29,448,280" Cursor="" FontFamily="Georgia" FontWeight="Bold">
        <Canvas Height="102">
            <Label x:Name="suitLabel" Content="Suit" Canvas.Left="6" Canvas.Top="12" RenderTransformOrigin="-3.988,-1.753" HorizontalAlignment="Center" VerticalAlignment="Top" Width="63" FontWeight="Normal"/>
            <Label x:Name="rankLabel" Content="Rank" Canvas.Left="6" Canvas.Top="48" RenderTransformOrigin="-3.988,-1.753" Width="63" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Normal"/>
            <TextBox x:Name="suitTextbox" Canvas.Left="54" TextWrapping="Wrap" Canvas.Top="18" Width="94" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Normal" ToolTip="Enter the suit of the card, you want to add."/>
            <TextBox x:Name="rankTextbox" Canvas.Left="54" TextWrapping="Wrap" Canvas.Top="52" Width="94" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Normal" ToolTip="Enter the rank of the card, you want to add."/>
            <Button x:Name="addCustomButton" Content="_Add Custom" Canvas.Left="164" Canvas.Top="29" HorizontalAlignment="Left" VerticalAlignment="Center" Width="72" Height="23" FontWeight="Normal" Click="addCustomButton_Click_1" ToolTip="Click to add the new custom card to the list." IsDefault="True"/>
            <Label x:Name="drawLabel" Content="Draw" Canvas.Left="8" Canvas.Top="118" RenderTransformOrigin="-3.988,-1.753" Width="63" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Normal"/>
            <TextBox x:Name="drawTextbox" Canvas.Left="55" TextWrapping="Wrap" Canvas.Top="120" Width="97" Height="22" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Normal" ToolTip="Enter the number od cards you want to draw"/>
            <Button x:Name="dealButton" Content="_Deal" Canvas.Left="170" Canvas.Top="122" HorizontalAlignment="Left" VerticalAlignment="Center" Width="72" FontWeight="Normal" Click="dealButton_Click_1" ToolTip="Click this button to pull numbers cards from the deck that you want."/>
            <Label x:Name="cardsDealtLabel" Content="Cards Dealt" Canvas.Left="68" Canvas.Top="168" RenderTransformOrigin="-0.432,0.171" HorizontalAlignment="Left" VerticalAlignment="Center" Width="115" FontFamily="Georgia" FontWeight="Bold" FontSize="13">
                <Label.Effect>
                    <DropShadowEffect/>
                </Label.Effect>
            </Label>
            <ListBox x:Name="cardDealtListBox" Height="116" Width="262" HorizontalAlignment="Left" Canvas.Top="195" VerticalAlignment="Center" Canvas.Left="-2" ToolTip="You can see the Cards Dealt after draw the card">
                <ListBox.Effect>
                    <DropShadowEffect/>
                </ListBox.Effect>
            </ListBox>
            <ListBox x:Name="deckListBox" Height="311" Width="239" HorizontalAlignment="Left" Canvas.Left="290" VerticalAlignment="Top" ToolTip="Here, you can see the list of all cards in the deck">
                <ListBox.Effect>
                    <DropShadowEffect/>
                </ListBox.Effect>
            </ListBox>
            <Label x:Name="deckLabel" Content="Deck" Canvas.Left="380" Canvas.Top="-20" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="13">
                <Label.Effect>
                    <DropShadowEffect/>
                </Label.Effect>
            </Label>
            <Button x:Name="viewDeckButton" Content="_View Deck" Canvas.Left="556" Canvas.Top="66" Height="38" Width="112" HorizontalAlignment="Center" VerticalAlignment="Top" Click="viewDeckButton_Click_1" ToolTip="Click this button to view all cards in the deck in the ListViewbox"/>
            <Button x:Name="shuffleButton" Content="_Shuffle" Canvas.Left="556" Canvas.Top="122" Height="38" Width="112" HorizontalAlignment="Center" VerticalAlignment="Top" Click="shuffleButton_Click_1" ToolTip="Click this button to shuffle all cards in the deck in the ListViewBox"/>
            <Button x:Name="resetButton" Content="_Reset" Canvas.Left="556" Canvas.Top="174" Height="38" Width="112" HorizontalAlignment="Center" VerticalAlignment="Top" Click="resetButton_Click_1" ToolTip="Click this button to reset the applicaiton"/>
            <Button x:Name="exitButton" Content="_Exit" Canvas.Left="556" Canvas.Top="222" Height="38" Width="112" HorizontalAlignment="Center" VerticalAlignment="Top" Click="exitButton_Click_1" ToolTip="Click to close the application" IsCancel="True"/>
        </Canvas>
    </GroupBox>
</Window>
